package classesLab;

public class Pencil {

	String brand;
	String type;
	boolean refillable;
	boolean erasable;

	void write(String text) {
		System.out.println(text);

	}

	void refill() {
		if (refillable) {
			System.out.println("Kalem dolduruldu");

		} else {
			System.out.println("Bu kalem doldurulamaz");

		}
	}

	void delete() {
		if (erasable) {
			System.out.println("Yazı silindi");

		} else {
			System.out.println("Bu yazı silinemez");

		}

	}
}
